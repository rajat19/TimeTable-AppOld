<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="in.akgec.timetable.LoginFragment"
    android:clickable="true"
    android:textAlignment="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:contentPadding="10dp"
        card:cardCornerRadius="10dp"
        card:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register New Account"
                android:textSize="25dp"
                android:padding="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBlueGrey"
                ></View>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/fullname"
                android:layout_gravity="center_horizontal"
                android:hint="Full Name"
                android:fontFamily="Roboto"/>

            <RadioGroup
                android:layout_width="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fillLastName"
                android:id="@+id/radio">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gender"
                    android:textSize="16sp"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:padding="10dp"
                    android:id="@+id/genderMale"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:padding="10dp"
                    android:id="@+id/genderFemale"/>
            </RadioGroup>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_gravity="center_horizontal"
                android:hint="Email Address"
                android:fontFamily="Roboto"/>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:id="@+id/phone"
                android:layout_gravity="center_horizontal"
                android:hint="Phone No."
                android:fontFamily="Roboto"/>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/username"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:fontFamily="Roboto"/>

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:fontFamily="Roboto"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/btnRegister"
                android:textColor="@color/colorWhite"
                android:elevation="10dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorBlueGrey"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:text="Already Have an Account? Login"
                android:padding="10dp"
                android:textColorLink="@color/colorBlue"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
