<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.akgec.timetable.TimeLimitFragment"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:contentPadding="10dp"
        card:cardCornerRadius="10dp"
        card:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Set Time Limit For Attendance"
                android:fontFamily="Roboto"/>

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:layout_marginTop="15dp"
                android:id=""
                android:layout_weight="1.07" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Current Time Limit:"
                android:fontFamily="Roboto"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Set "
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:elevation="10dp"
                android:background="@color/colorBlue"
                android:drawableRight="@android:drawable/ic_lock_idle_alarm"
                android:translationZ="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
