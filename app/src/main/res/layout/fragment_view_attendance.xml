<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.akgec.timetable.ViewAttendanceFragment"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:contentPadding="10dp"
        card:cardCornerRadius="10dp"
        card:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/view_attendance"
                android:fontFamily="Roboto"/>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="View"
                android:textColor="@color/colorWhite"
                android:elevation="10dp"
                android:drawableRight="@android:drawable/ic_menu_send"
                android:background="@color/colorBlue"
                android:translationZ="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
